{
  "name": "skatteetaten.github.io",
  "version": "1.0.0",
  "description": "Information about the Skatteetaten GitHub organisation, repositories and approaches to software",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Skatteetaten/skatteetaten.github.io.git"
  },
  "scripts": {
    "prestart": "npm run clean",
    "start": "react-scripts start",
    "prebuild": "run-s clean lint",
    "build": "GENERATE_SOURCEMAP=false react-scripts build",
    "deploy": "gh-pages -d build -p 0",
    "test": "echo \"Error: no test specified\"",
    "lint": "eslint 'src/**/*{.ts,.tsx}'",
    "lint:fix": "eslint --fix 'src/**/*{.ts,.tsx}'",
    "clean": "rimraf build coverage *.tgz",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@skatteetaten/frontend-components": "4.1.1",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "react-router-dom": "5.2.0"
  },
  "devDependencies": {
    "@skatteetaten/ci-scripts": "2.0.5",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "11.2.7",
    "@types/jest": "26.0.23",
    "@types/node": "15.12.2",
    "@types/react": "16.14.8",
    "@types/react-dom": "16.9.13",
    "@types/react-router-dom": "5.1.7",
    "eslint-plugin-prettier": "3.4.0",
    "gh-pages": "3.2.1",
    "husky": "6.0.0",
    "jest-junit": "12.2.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.1",
    "pretty-quick": "3.1.0",
    "react-scripts": "4.0.3",
    "rimraf": "3.0.2",
    "typescript": "4.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/setupTests.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/?!(@skatteetaten/frontend-components)"
    ]
  },
  "jest-junit": {
    "suiteName": "Unit Tests",
    "outputDirectory": "coverage/surefire-reports",
    "outputName": "TEST-jest.xml",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  },
  "prettier": {
    "singleQuote": true
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 10",
    "not op_mini all"
  ],
  "engines": {
    "node": ">=10.13.0"
  }
}
